@model dynamic
<!DOCTYPE html>
<html>
<head>
    <title>Citizen Portal - Main Menu</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Welcome to the Citizen Portal</h1>
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }
        <div class="menu text-center">
            <a href="@Url.Action("ReportIssue", "Home")" class="btn btn-active m-2">Report Issues</a>
            <a href="#" class="btn btn-disabled m-2" disabled>Local Events and Announcements</a>
            <a href="#" class="btn btn-disabled m-2" disabled>Service Request Status</a>
            <a href="@Url.Action("Privacy", "Home")" class="btn btn-active m-2">Privacy Policy</a>
        </div>
    </div>
</body>
</html>